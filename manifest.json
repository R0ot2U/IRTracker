{
	"name": "IR Tracker",
	"version": "1.0",
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"description": "IR Tracker to assist CIC",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "IR Tracker",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon_52.png",
		"128": "icon_104.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"activeTab",
		"cookies",
		"storage",
		"clipboardWrite",
		"clipboardRead",
		"webNavigation",
		"https://org62.my.salesforce.com/*",
		"https://org62.lightning.force.com/*"
	],
	"background": {
		"scripts": [
			"jquery.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://org62.my.salesforce.com/*",
				"https://org62.lightning.force.com/*"
			],
			"js": [
				"content-script.js"
			]
		}
	],
	"web_accessible_resources": [
		"slds/assets/icons/utility/*"
	],
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+I",
				"mac": "Alt+I",
				"linux": "Alt+I"
			}
		}
	}
}